rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function isValidUserData() {
      return request.resource.data.keys().hasAll(['username', 'email', 'role']) &&
             request.resource.data.username is string &&
             request.resource.data.email is string &&
             request.resource.data.role in ['admin', 'learner'];
    }
    
    function isValidProgress() {
      return request.resource.data.progress.keys().hasAll(['completedModules', 'xp', 'unlockedBadges', 'unlockedMedals']) &&
             request.resource.data.progress.xp is number &&
             request.resource.data.progress.xp >= 0 &&
             request.resource.data.progress.unlockedBadges is list &&
             request.resource.data.progress.unlockedMedals is list &&
             // [NEW] Wallet & Purchases
             (!request.resource.data.progress.keys().hasAny(['purchasedModules']) || request.resource.data.progress.purchasedModules is list);
    }

    // [NEW] Validate Wallet Transactions
    // Ideally, only Cloud Functions should increment wallet (recharge).
    // Decrement allowed if purchasing a module (balance - 1).
    function isValidWalletUpdate() {
        // If balance is not changing, it's valid (regarding wallet)
        // If balance is changing:
        return !request.resource.data.diff(resource.data).affectedKeys().hasAny(['walletBalance']) ||
               (request.resource.data.walletBalance is number && 
                request.resource.data.walletBalance >= 0);
    }
    
    // Users collection (ADMIN ONLY - user data now in localStorage)
    match /users/{userId} {
      // Only admins can read/write user documents
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Coupons Collection
    match /coupons/{couponId} {
        allow read: if isAuthenticated();
        allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                      (isAuthenticated() && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['usedBy']));
    }

    // Coin Bundles Collection (Dynamic Pricing)
    match /coin_bundles/{bundleId} {
        allow read: if true; // Publicly visible for pricing page
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
