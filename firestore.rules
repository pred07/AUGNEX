rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    // Check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user has the 'admin' custom claim
    // WHY: Avoids reading an admin document from Firestore (saves 1 read and prevents recursion)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }

    // Check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTIONS ---

    // 1. users
    // - Users can read/write their own profile (e.g., updating display name)
    // - Admins can manage all users
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 2. courses
    // - Publicly readable (marketing/browsing)
    // - Only admins can modify content
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 3. coupons
    // - Authenticated users can view available coupons
    // - Only admins can manage coupons
    match /coupons/{couponId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['usedBy']));
    }

    // 4. purchases
    // - Users can read only their own purchase history
    // - No client-side writes allow (purchases must be handled via Cloud Functions/Backend)
    // - Note: For queries, users must filter by `userId` == auth.uid
    match /purchases/{purchaseId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if false; 
    }

    // 5. wallet (or balance)
    // - No client-side writes allowed (prevents tampering with funds)
    match /wallet/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;
    }

    // 6. Bundles
    match /bundles/{bundleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Default Deny
    // Prevents accidental exposure of new collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
